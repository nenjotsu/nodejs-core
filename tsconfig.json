{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "./",
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "rootDir": "src/",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/**/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
